{% extends 'base.html.twig' %}

{% block body %}
    <h1>Projects list</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Repository URL</th>
            <th>Date Created</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td><a href="{{ path('project_show', { 'id': project.id }) }}">{{ project.id }}</a></td>
                <td>{{ project.repositoryUrl }}</td>
                <td>{% if project.dateCreated %}{{ project.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    {#<a class="btn btn-default" href="{{ path('project_show', { 'id': project.id }) }}">show</a>#}
                    <a class="btn btn-primary" href="{{ path('project_edit', { 'id': project.id }) }}">edit</a>
                    <a class="btn btn-warning" href="{{ path('codecheck_run', { 'projectId': project.id }) }}">check</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-group">
        <li class="list-group-item">
            <a class="btn btn-success" href="{{ path('project_new') }}">Create a new project</a>
        </li>
    </ul>
{% endblock %}